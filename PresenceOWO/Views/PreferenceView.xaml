<UserControl x:Class="PresenceOWO.Views.PreferenceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresenceOWO.Views"
             xmlns:vm="clr-namespace:PresenceOWO.ViewModels"
             xmlns:sys="clr-namespace:PresenceOWO.OWOSystem"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:PreferenceVM}"
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid>
        <StackPanel Orientation="Vertical">
            <CheckBox Content="Run in background on closed" 
                      Style="{StaticResource SettingCheckBox}"
                      IsChecked="{Binding _HideOnClosed}" />

            <CheckBox Content="Launch PresenceOWO on Windows startup" 
                      Style="{StaticResource SettingCheckBox}"
                      IsChecked="{Binding _LaunchOnStartup}" />

        </StackPanel>
    </Grid>
</UserControl>
